<p><%= button_to "Top Rated Movies", movies_path, method: :get %></p>

<h1>OR</h1>

<%= form_with url: movies_path, method: :get, local: true do |form| %>
    <p><%= form.label :search, "Search by movie title"%></p>
    <%= form.text_field :search, required: true %>

    <p><%= form.submit "Find Movies" %></p>
<% end %>
