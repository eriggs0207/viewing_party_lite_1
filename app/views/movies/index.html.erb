<% if params[:commit] == "Find Movies" %>
<h1>Movie Results for: <%= params[:search] %></h1>
<% else %>
<h1>Top Rated Movies</h1>
<% end %>

<p><%= button_to "Discover Movies", discover_index_path, method: :get %></p>


<% @movies.each do |movie|  %>
  <p><%= link_to "#{movie.original_title}", movie_path(movie.id) %> Vote Average:<%= movie.vote_average %></p>
<% end %>
